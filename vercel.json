{
    "version": 2.1,
    "installCommand": "pip install -r requirements.txt",
    "devCommand": "gunicorn app:app",
    "functions": {
        "app.py": {
            "runtime": "python"
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "excludeFiles": [
        ".next/**",
        "*.cache/**",
        "node_modules/**",
        "public/**",
        "app/**",
        "static/**",
        "templates/**",
        "external/**"
    ]
}
